//! tcp â€” sockets TCP (FFI)
struct TcpStream { __raw: __ffi::Tcp }
export fn connect(addr: String, port: i32) -> TcpStream { __ffi::tcp_connect(addr, port) }
export fn send(mut s: TcpStream, data: String) -> i32 { __ffi::tcp_send(s.__raw, data) }
export fn recv(mut s: TcpStream, max: i32) -> String { __ffi::tcp_recv(s.__raw, max) }
export fn close(mut s: TcpStream) { __ffi::tcp_close(s.__raw) }
