//! decimal — décimaux à précision fixe (scale=2 par défaut)
struct Decimal { cents: i64 }

export fn from_str(s: String) -> Decimal { __intrinsics::decimal_parse(s) }
export fn from_i64(n: i64) -> Decimal { Decimal{ cents: n * 100 } }
export fn add(a: Decimal, b: Decimal) -> Decimal { Decimal{ cents: a.cents + b.cents } }
export fn sub(a: Decimal, b: Decimal) -> Decimal { Decimal{ cents: a.cents - b.cents } }
export fn mul(a: Decimal, b: Decimal) -> Decimal { __intrinsics::decimal_mul(a.cents, b.cents) }
export fn to_string(d: Decimal) -> String { __intrinsics::decimal_to_string(d.cents) }
