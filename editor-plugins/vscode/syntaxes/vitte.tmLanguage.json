{
  "scopeName": "source.vitte",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vitte",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.vitte",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vitte",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.vitte"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vitte",
          "match": "\\b(fn|let|mut|const|if|else|while|for|return|match|struct|enum|impl|use|mod|pub|async|await)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.vitte",
          "match": "\\b\\d+(?:_\\d+)*(?:\\.\\d+)?\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.vitte",
          "match": "\\b(i32|i64|f32|f64|bool|string|bytes|Vec|Map|Option|Result)\\b"
        }
      ]
    }
  }
}